<div class="tab-container">
  <h1 class='welcome'>
    <span>Comptabilitat de </span>
    <%= @current_empresa.empnom %>
  </h1>

  <div class='menu-container'>
    <div class='menuOptions'>
      <% @options.each { |opt| %>
