<div class='sign-form'>
  <h1>Nou compte</h1>
  <hr>

  <%= form_for(:user, :url => {:controller => :users, :action => :create}) do |f| %>

    <% if flash[:notice] %>
      <div class="errors ui-state-error ui-corner-all">
        <%= flash[:notice] %>
        <% if @user.errors.any? %>
          <ul class='sign-form-errors'>
            <% for message_error in @user.errors.full_messages %>
            <li>* <%= message_error %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
    <% end %>

    <fieldset>
      <ol>
        <li>
          <label> Nom </label>
          <%= f.text_field :nom %>
        </li>
        <li>
          <label> Cognoms </label>
          <%= f.text_field :cognoms %>
        </li>
        <li>
          <label> Usuari </label>
          <%= f.text_field :username %>
        </li>
        <li>
          <label> Email </label>
          <%= f.text_field :email %>
        </li>
        <li>
          <label> Contrasenya </label>
          <%= f.password_field :password %>
        </li>
        <li>
          <label> Repetir Contrasenya </label>
          <%= f.password_field :password_confirmation %>
        </li>
      </ol>
    </fieldset>

    <%= f.submit 'Enviar' %>
  <% end %>

</div>
